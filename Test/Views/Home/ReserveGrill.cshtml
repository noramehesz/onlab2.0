@using Test.Models

@model Test.Models.BigViewModel

@{

}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

</head>

<body>
    <div class="container">
        <h4 class="font-weight-bold">Choosen grill: </h4>

        <div class="card col-sm-8">
            <div class="card-body">
                <h4 class="card-title">A fantastic grill No @Model.grill.GrillId </h4>
                <p class="card-text">@Model.grill.GrillDecription</p>
                <p class="card-text">@Model.grill.GrillPricePerHour Ft/óra</p>
            </div>
        </div>
    </div>

    

    <div class="container">
        <h5 class="font-weight-bold">Reservation details:</h5>

        <form method="post" asp-controller="Home" asp-action="SaveReservation">
            <div class="form-group col-md-8">
                <label for="reservation.ReservatorName">Name</label>
                <input type="text" class="form-control" asp-for="reservation.ReservatorName" placeholder="Name" />
            </div>

            <div class="form-group col-md-8">
                <label>Address</label>
                <input type="text" class="form-control" asp-for="reservation.ReservationAddress" placeholder="Address" />
            </div>

            <div class="form-group col-md-8">
                <label>Phone Number</label>
                <input type="tel" class="form-control" asp-for="reservation.PhoneNum" placeholder="Phone number" />
            </div>

            <div class="form-group col-md-8">
                <label>Comment</label>
                <textarea class="form-control" asp-for="reservation.ReservationComment" rows="2" placeholder="Anything else?" ></textarea>
            </div>

            <div class="form-group col-md-8">
                <label>Date</label>
                <input type="date" class="form-control" asp-for="reservation.ReservationDate" />
            </div>

            <button type="submit" class="btn btn-primary"  asp-route-res="@Model.reservation" asp-route-gri="@Model.grill">Submit reservation</button>

        </form>

    </div>

</body>
</html>





